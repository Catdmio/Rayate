<p id="notice"><%= notice %></p>

<h1>Tattooers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Style</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tattooers.each do |tattooer| %>
      <tr>
        <td><%= tattooer.name %></td>
        <td><%= tattooer.style %></td>
        <td><%= tattooer.email %></td>
        <td><%= link_to 'Show', tattooer %></td>
        <td><%= link_to 'Edit', edit_tattooer_path(tattooer) %></td>
        <td><%= link_to 'Destroy', tattooer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

